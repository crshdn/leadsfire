# LeadsFire Click Tracker Configuration
# Copy this file to .env and configure your settings

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="LeadsFire Click Tracker"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=America/New_York

# ===========================================
# DATABASE SETTINGS
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=leadsfire_tracker
DB_USERNAME=leadsfire_ct_user
DB_PASSWORD=your_secure_password_here

# ===========================================
# SESSION SETTINGS
# ===========================================
SESSION_LIFETIME=86400
SESSION_NAME=leadsfire_session

# ===========================================
# LOGGING
# ===========================================
# Options: verbose, standard, minimal
LOG_LEVEL=verbose
LOG_CHANNEL=daily

# ===========================================
# SECURITY
# ===========================================
# Comma-separated list of allowed IPs for admin access
# Leave empty to allow all (not recommended for production)
ALLOWED_IPS=127.0.0.1,::1

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Options: mailgun, smtp, sendgrid, ses, log
MAIL_DRIVER=log

# Mailgun Settings
MAILGUN_DOMAIN=
MAILGUN_API_KEY=
MAILGUN_ENDPOINT=api.mailgun.net

# SMTP Settings (if MAIL_DRIVER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# SendGrid Settings (if MAIL_DRIVER=sendgrid)
SENDGRID_API_KEY=

# AWS SES Settings (if MAIL_DRIVER=ses)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# General Mail Settings
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="LeadsFire Click Tracker"
MAIL_TO_ADDRESS=admin@your-domain.com

# ===========================================
# GEOIP SETTINGS
# ===========================================
# Options: ip-api, maxmind, ip2location, ipinfo
GEOIP_PROVIDER=ip-api

# MaxMind Settings (if GEOIP_PROVIDER=maxmind)
MAXMIND_LICENSE_KEY=
MAXMIND_DATABASE_PATH=storage/geoip/GeoLite2-City.mmdb

# ===========================================
# TRACKING SETTINGS
# ===========================================
# Cookie timeout in seconds (default: 30 days)
COOKIE_TIMEOUT=2592000
COOKIE_SAMESITE=None
COOKIE_SECURE=true

# Ignore duplicate clicks within X seconds (0 = disabled)
DEDUP_SECONDS=0

# Conversion attribution window in days
ATTRIBUTION_DAYS=30

# Ignore prefetch requests
IGNORE_PREFETCH=true

# Log direct traffic (visits without tracking params)
LOG_DIRECT_TRAFFIC=true

